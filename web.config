<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <security>
        <authentication>
          <!-- Allow both anonymous and basic auth -->
          <anonymousAuthentication enabled="true" />
          <basicAuthentication enabled="false" />  <!-- Disable IIS Basic Auth since we're using JWT -->
        </authentication>
        <requestFiltering allowDoubleEscaping="true">
          <fileExtensions>
            <add fileExtension=".ico" allowed="true" />
          </fileExtensions>
        </requestFiltering>
      </security>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" arguments=".\CaseRelayAPI.dll" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="inprocess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="ASPNETCORE_URLS" value="http://+:80" />
          <environmentVariable name="ASPNETCORE_DETAILEDERRORS" value="true" />
          <environmentVariable name="ASPNETCORE_SHUTDOWNTIMEOUTSECONDS" value="120" />
        </environmentVariables>
      </aspNetCore>
      <httpErrors existingResponse="PassThrough" />
    </system.webServer>
  </location>
</configuration>
